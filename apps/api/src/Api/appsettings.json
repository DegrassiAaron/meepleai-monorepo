{
  "AllowedOrigins": [ "http://localhost:3000" ],
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Database=meepleai;Username=meeple;Password=meeplepass"
  },
  "QdrantUrl": "http://localhost:6333",
  "JwtIssuer": "http://localhost:8080",
  "Authentication": {
    "SessionManagement": {
      "InactivityTimeoutDays": 30,
      "AutoRevocationIntervalHours": 1
    }
  },
  "RateLimit": {
    "Admin": {
      "MaxTokens": 1000,
      "RefillRate": 10.0
    },
    "Editor": {
      "MaxTokens": 500,
      "RefillRate": 5.0
    },
    "User": {
      "MaxTokens": 100,
      "RefillRate": 1.0
    },
    "Anonymous": {
      "MaxTokens": 60,
      "RefillRate": 1.0
    }
  },
  "PdfProcessing": {
    "MaxFileSizeBytes": 104857600,
    "MaxPageCount": 500,
    "MinPageCount": 1,
    "MinPdfVersion": "1.4",
    "AllowedContentTypes": [ "application/pdf" ]
  },
  "FollowUpQuestions": {
    "Enabled": true,
    "MaxQuestionsPerResponse": 5,
    "GenerationTimeoutMs": 10000,
    "MaxRetries": 2,
    "FailOnGenerationError": false,
    "CacheVersion": 2
  }
}
