{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4318",
  "Authentication": {
    "SessionCookie": {
      "Secure": false,
      "SameSite": "Lax",
      "HttpOnly": true
    },
    "SessionManagement": {
      "InactivityTimeoutDays": 7,
      "AutoRevocationIntervalHours": 1
    }
  },
  "RateLimit": {
    "Admin": {
      "MaxTokens": 1000,
      "RefillRate": 10.0
    },
    "Editor": {
      "MaxTokens": 500,
      "RefillRate": 5.0
    },
    "User": {
      "MaxTokens": 100,
      "RefillRate": 1.0
    },
    "Anonymous": {
      "MaxTokens": 60,
      "RefillRate": 1.0
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001"
    ]
  }
}
