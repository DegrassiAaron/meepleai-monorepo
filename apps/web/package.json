{
  "name": "@meepleai/web",
  "private": true,
  "scripts": {
    "dev": "node ./node_modules/next/dist/bin/next dev -p 3001",
    "build": "node ./node_modules/next/dist/bin/next build",
    "start": "node ./node_modules/next/dist/bin/next start -p 3000",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "node ./node_modules/next/dist/bin/next lint",
    "lint:fix": "node ./node_modules/next/dist/bin/next lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chess.js": "^1.4.0",
    "framer-motion": "^12.23.24",
    "next": "15.5.4",
    "react": "18.3.1",
    "react-chessboard": "^4.6.0",
    "react-dom": "18.3.1",
    "react-intersection-observer": "^9.16.0",
    "recharts": "^3.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "24.7.2",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "autoprefixer": "^10.4.21",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.12",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "5.9.3"
  }
