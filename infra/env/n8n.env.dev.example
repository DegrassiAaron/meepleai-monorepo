# Development environment for n8n automation service.
# Copy to infra/env/n8n.env.dev and keep credentials local.
GENERIC_TIMEZONE=Europe/Rome
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Execution settings
EXECUTIONS_DATA_SAVE_ON_PROGRESS=true
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Database (using shared Postgres instance)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=meepleai
DB_POSTGRESDB_USER=meeple
DB_POSTGRESDB_PASSWORD=meeplepass

# N8N-01: Webhook Configuration
# MeepleAI API base URL (for workflow HTTP requests to /agents/explain)
MEEPLEAI_API_URL=http://api:8080

# N8N-01: Service Account Session Token
# This should be generated using: pwsh tools/setup-n8n-service-account.ps1
# Leave empty initially, will be populated after service account setup
N8N_SERVICE_SESSION=

# Security
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme-in-production

# Encryption key (required)
N8N_ENCRYPTION_KEY=changeme-replace-with-32-byte-key

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Editor
N8N_EDITOR_BASE_URL=http://localhost:5678
